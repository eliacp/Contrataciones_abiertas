<form id="update_party_form">
    <input type="text" name="contractingprocess_id" value = "<%= data.contractingprocess_id %>" hidden>
    <input type="text" name="parties_id" value = "<%= data.id %>" hidden>

    <p><label>Nombre<!--Name--></label>
        <input name="name" type="text" class="form-control" value="<%= data.name %>"></p>
    <hr>
    <h4>Identificador</h4>
    <p><label>Esquema <!--Identifier scheme--></label>
        <input name = "identifier_scheme" class="form-control" type="text" value="<%= data.identifier_scheme %>" ></p>
    <p><label>ID<!--Identifier ID--></label>
        <input name = "identifier_id" class="form-control" type="text" value="<%= data.identifier_id %>" required></p>
    <p><label>Nombre legal<!--Identifier legal name--></label>
        <input name = "identifier_legalname" class="form-control" type="text" value="<%= data.identifier_legalname %>" ></p>
    <p><label>URI<!--Identifier URI--></label>
        <input name = "identifier_uri" class="form-control" type="text" value="<%= data.identifier_uri %>" ></p>
    <hr>
    <h4>Dirección</h4>
    <p><label>Calle y número <!--Address street address--></label>
        <input name="address_streetaddress" type="text" class="form-control" value="<%= data.address_streetaddress %>" ></p>
    <p><label>Localidad<!--Address locality--></label>
        <input name="address_locality" type="text" class="form-control" value="<%= data.address_locality %>"></p>
    <p><label>Región<!--Address region--></label>
        <input name="address_region" type="text" class="form-control" value="<%= data.address_region %>"></p>
    <p><label>Código postal<!--Address postal code--></label>
        <input name="address_postalcode" type="text" class="form-control" value="<%= data.address_postalcode %>"></p>
    <p><label>País<!--Address country name--></label>
        <input name="address_countryname" type="text" class="form-control" value="<%= data.address_countryname %>"></p>
    <hr>
    <h4>Contacto</h4>
    <p><label>Nombre<!--Contact point name--></label>
        <input name="contactpoint_name" type="text" class="form-control" value="<%= data.contactpoint_name %>"></p>
    <p><label>E-mail<!--Contact point email--></label>
        <input name="contactpoint_email" type="text" class="form-control" value="<%= data.contactpoint_email %>"></p>
    <p><label>Teléfono<!--Contact point telephone--></label>
        <input name="contactpoint_telephone"  type="text" class="form-control" value="<%= data.contactpoint_telephone %>"></p>
    <p><label>Fax<!--Contact point fax number--></label>
        <input name="contactpoint_faxnumber" type="text" class="form-control" value="<%= data.contactpoint_faxnumber %>"></p>
    <p><label>URL<!--Contact point url--></label>
        <input name="contactpoint_url"    type="url" class="form-control" value="<%= data.contactpoint_url %>"></p>

        <label>Roles </label>
    <div class="well">
        <label class="checkbox-inline"><input name="buyer" type="checkbox" <%= roles.buyer?'checked':'' %>> Buyer </label><br>
        <label class="checkbox-inline"><input name="procuringEntity" type="checkbox" <%= roles.procuringentity?'checked':'' %>> Procuring Entity </label><br>
        <label class="checkbox-inline"><input name="supplier" type="checkbox" <%= roles.supplier?'checked':'' %>> Supplier </label><br>
        <label class="checkbox-inline"><input name="tenderer" type="checkbox" <%= roles.tenderer?'checked':'' %>> Tenderer </label><br>
        <label class="checkbox-inline"><input name="funder" type="checkbox" <%= roles.funder?'checked':'' %>> Funder </label><br>
        <label class="checkbox-inline"><input name="enquirer" type="checkbox" <%= roles.enquirer?'checked':'' %>> Enquirer </label><br>
        <label class="checkbox-inline"><input name="payer" type="checkbox" <%= roles.payer?'checked':'' %>> Payer </label><br>
        <label class="checkbox-inline"><input name="payee" type="checkbox" <%= roles.payee?'checked':'' %>> Payee </label><br>
        <label class="checkbox-inline"><input name="reviewBody" type="checkbox" <%= roles.reviewbody?'checked':'' %>> Review Body </label><br>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-default">Guardar</button>
        </div>
        <div class="col-sm-6" style="text-align: right">
            <button name="delete_party" data-parties_id="<%= data.id %>" type="button" class="btn btn-danger">Eliminar</button>
        </div>
    </div>

</form>